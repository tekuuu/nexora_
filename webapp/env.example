# Environment Variables Template
# This is a template file. Copy this to .env.local for local development.
# For production, set these variables in your deployment platform (e.g., Vercel Dashboard).
# The app will refuse to start if any required variable is missing or invalid.
# All Ethereum addresses must start with '0x' and be exactly 42 characters long.

# Network Configuration
# These settings define the blockchain network the app connects to (Sepolia testnet defaults).
NEXT_PUBLIC_CHAIN_ID=11155111
NEXT_PUBLIC_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
NEXT_PUBLIC_NETWORK_EXPLORER_URL=https://sepolia.etherscan.io

# API Keys
# External service keys for blockchain data and wallet connections.
NEXT_PUBLIC_ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=YOUR_WALLETCONNECT_PROJECT_ID

# Underlying ERC20 Tokens
# Standard ERC20 token addresses on Sepolia (can be kept as-is for testnet).
NEXT_PUBLIC_WETH=0x7b79995e5f793A07Bc00c21412e50Ecae098E7f9
NEXT_PUBLIC_USDC=0x1c7D4B196Cb0C7B01d743Fbc6116a902379C7238
NEXT_PUBLIC_DAI=0x75236711d42D0f7Ba91E03fdCe0C9377F5b76c07

# Confidential Tokens
# Confidential ERC7984 token addresses deployed on Sepolia (replace with your deployed contracts).
NEXT_PUBLIC_CONFIDENTIAL_WETH=YOUR_CONFIDENTIAL_WETH_ADDRESS
NEXT_PUBLIC_CONFIDENTIAL_USDC=YOUR_CONFIDENTIAL_USDC_ADDRESS
NEXT_PUBLIC_CONFIDENTIAL_DAI=YOUR_CONFIDENTIAL_DAI_ADDRESS

# Protocol Contracts
# Core lending protocol contract addresses deployed on Sepolia (replace with your deployed contracts).
NEXT_PUBLIC_LENDING_POOL=YOUR_LENDING_POOL_ADDRESS
NEXT_PUBLIC_TOKEN_SWAPPER=YOUR_TOKEN_SWAPPER_ADDRESS
NEXT_PUBLIC_POOL_CONFIGURATOR=YOUR_POOL_CONFIGURATOR_ADDRESS
NEXT_PUBLIC_PRICE_ORACLE=YOUR_PRICE_ORACLE_ADDRESS
NEXT_PUBLIC_ACL_MANAGER=YOUR_ACL_MANAGER_ADDRESS

# Libraries
# Logic library addresses for supply and borrow operations (replace with your deployed contracts).
NEXT_PUBLIC_SUPPLY_LOGIC=YOUR_SUPPLY_LOGIC_ADDRESS
NEXT_PUBLIC_BORROW_LOGIC=YOUR_BORROW_LOGIC_ADDRESS

# Admin Configuration
# Comma-separated list of admin wallet addresses (lowercase, trimmed). Add multiple admins separated by commas.
NEXT_PUBLIC_ADMIN_WALLETS=0xYOUR_ADMIN_WALLET_1,0xYOUR_ADMIN_WALLET_2
